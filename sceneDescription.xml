<Root>
	<Width>500</Width>
	<Height>500</Height>
	<PictureToCameraDistance>1.0</PictureToCameraDistance>

	<Camera xCentre="7" yCentre="1" zCentre="2" theta="1" phi="-1" psi="-1"/>

	<Lights>
		<Ambiant>
			<AmbiantLight intensity="0.2" color="WHITE"/>
		</Ambiant>
		<Punctual>
			<PunctualLight intensity="0.6" xCentre="2" yCentre="1" zCentre="0" color="WHITE"/>
		</Punctual>
		<Directional>
			<DirectionalLight intensity="0.2" xDirection="1" yDirection="4" zDirection="4" color="WHITE"/>
		</Directional>
		<SpotLights>
			<SpotLight intensity="0.2" xCentre="3" yCentre="3" zCentre="3" xDirection="1" yDirection="4" zDirection="4" angle="0.2" color="WHITE"/>
		</SpotLights>
	</Lights>

	<Materials>
		<Material materialName="GLASS"   brightness="50"   reflectivity="0.1"  transparency="0.7" refraction="0.2"/>
		<Material materialName="METAL"   brightness="10"   reflectivity="0.4"  transparency="0"   refraction="1"/>
		<Material materialName="PLASTIC" brightness="1000" reflectivity="0.05" transparency="0"   refraction="1"/>
		<Material materialName="MIRROR"  brightness="10"   reflectivity="0.95" transparency="0"   refraction="1"/>
	</Materials>

	<Colors>
		<Color colorName="RED"    redColor="1"   greenColor="0"   blueColor="0"/>
		<Color colorName="BLUE"   redColor="0"   greenColor="0"   blueColor="1"/>
		<Color colorName="GREEN"  redColor="0"   greenColor="1"   blueColor="0"/>
		<Color colorName="PURPLE" redColor="1"   greenColor="0"   blueColor="1"/>
		<Color colorName="MIST"   redColor="0.5" greenColor="0"   blueColor="0.5"/>
		<Color colorName="WHITE"  redColor="1"   greenColor="1"   blueColor="1"/>
	</Colors>

	<Objects>

		<Spheres>
			<Sphere Rayon_S="1"    xCentre="2"  yCentre="0"     zCentre="4" color="RED"     material="GLASS"/>
			<Sphere Rayon_S="1"    xCentre="2"  yCentre="0"     zCentre="4" color="BLUE"    material="METAL"/>
			<Sphere Rayon_S="1"    xCentre="-2" yCentre="0"     zCentre="4" color="GREEN"   material="PLASTIC"/>
			<Sphere Rayon_S="5000" xCentre="0"  yCentre="-5001" zCentre="0" color="MIST"    material="MIRROR"/>
		</Spheres>

		<Plans>
			<Plan aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" color="BLUE"  material="PLASTIC"/>
			<Plan aX="-4" aY="0"  aZ="0" bX="-4" bY="-1" bZ="0" cX="-4" cY="0" cZ="1" color="GREEN" material="PLASTIC"/>
		</Plans>

		<Tetrahedrons>
			<Tetrahedron aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" dX="0" dY="-1" dZ="1" color="BLUE" material="PLASTIC"/>
		</Tetrahedrons>

		<Parallelepipeds>
			<Parallelepiped aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" dX="1"  dY="-1" dZ="0" color="BLUE" material="METAL"/>
		</Parallelepipeds>

		<Solids>
			<Solid>
				<Triangle aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" color="BLUE" material="PLASTIC"/>
				<Triangle aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" color="BLUE" material="PLASTIC"/>
				<Triangle aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" color="BLUE" material="PLASTIC"/>
				<Triangle aX="1"  aY="-1" aZ="0" bX="0"  bY="-1" bZ="0" cX="0" cY="-1" cZ="1" color="BLUE" material="PLASTIC"/>
			</Solid>
		</Solids>
	</Objects>
</Root>